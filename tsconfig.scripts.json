{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["content/*"],
      "@messages/*": ["src/messages/*"],
      "@prompts/*": ["prompts/*"],
      "@scripts/*": ["scripts/*"],
      "@shared/*": ["src/shared/*"],
      "@store/*": ["src/store/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "src/shared/lib/**/*.ts",
    "src/shared/lib/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
